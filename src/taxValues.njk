---
layout: base.njk
pagination:
  data: collections.taxes
  size: 1
  alias: value
permalink: /{{ value[0] }}/{{ value[1] }}.html
eleventyComputed:
  title: "{{value[0]}}: {{value[1]}}"
---

<div class="h-feed">
  {% for post in collections.nestedTax[value[0]][value[1]] | reverse %}
    <div class="card h-entry">
      <p><a href="{{ post.url | url }}" class="p-name u-url">{{ post.data.title }}</a></p>
      <p class="p-summary">{{post.data.description | renderMd | safe if post.data.description else post.data.page.excerpt | renderMd | safe}}</p>
    </div>
  {% endfor %}
</div>