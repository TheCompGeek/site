---
layout: base.njk
pagination:
  data: collections.taxes
  size: 1
  alias: value
permalink: /{{ value[0] }}/{{ value[1] }}.html
eleventyComputed:
  title: "{{value[0]}}: {{value[1]}}"
---

{% for post in collections.nestedTax[value[0]][value[1]] | reverse %}
  <div class="card">
    <p><a href="{{ post.url | url }}">{{ post.data.title }}</a></p>
    <p>{{post.data.description | renderMd | safe if post.data.description else post.data.page.excerpt | renderMd | safe}}</p>
  </div>
{% endfor %}