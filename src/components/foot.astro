---
    import config from '$config'
    import flowerpower from '../components/deets/flowerpower.txt?raw'
    let flowers = [[], []]
    Object.values(flowerpower.split('\n---'))
        .reverse()
        .map(x => {
            flowers[0].push(Number(x.substring(0, 1)))
            flowers[1].push(x.substring(1));
        })
---
