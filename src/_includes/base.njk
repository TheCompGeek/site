<!doctype html>
<html lang="en">
   <head>
     {% include "partials/meta.njk" %}
   </head>
   <body>
      {% if color %}
      <style>
        :root {
          --0: {{color}}
        }
      </style>
      {% endif %}

      <div>
         <header>
           {% include "partials/head.njk" %}
         </header>
         <article>
           {% block main %}
            {% if title %}
              <h1>{{title}}</h1>
            {% endif %}
            {{content | safe}}
           {% endblock %}
         </article>
         <footer>
           {% include "partials/foot.njk" %}
         </footer>
      </div>
   </body>
</html>