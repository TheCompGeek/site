<!doctype html>
<html lang="en">
  <head>
    {% include "partials/meta.njk" %}
  </head>
  <body {% if color and color != config.color %}style="--light: {{color}}"{% endif %}>
  <div>
    <header>
      {% include "partials/head.njk" %}
    </header>
    <main>
      <article class="h-entry">
        {% block main %}
          {% if title and not notitle %}
            {% block title %}
              <h1 class="p-name">{{ title | capitalize}}</h1>
            {% endblock %}
          {% endif %}
          <div class="e-content">
            {{ content | safe }}
          </div>
        {% endblock %}
        {% if hasCodeBlock %}
          <span id="postlude"/>
        {% endif %}
      </article>
    </main>
    <footer>
      {% include "partials/foot.njk" %}
    </footer>
  </div>
</body></html>
