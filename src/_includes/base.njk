<!doctype html>
<html lang="en">
   <head>
     {% include "partials/meta.njk" %}
   </head>
   <body>
      {% if color and color != config.color %}
      <style>
        :root {
          --0: {{color}}
        }
      </style>
      {% endif %}
      <div>
         <header>
           {% include "partials/head.njk" %}
         </header>
         <main>
          <article>
            {% block main %}
              {% if title and not notitle %}
                <h1>{{title}}</h1>
              {% endif %}
              {{content | safe}}
            {% endblock %}
          </article>
         </main>
         <footer>
           {% include "partials/foot.njk" %}
         </footer>
      </div>
   </body>
</html>