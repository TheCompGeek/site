---
import Header from 'component:head'
import Footer from 'component:foot'
import Banner from 'component:banner'
import config from '$config'
import Stf from '$scripts/warnReasons'
const {title,is,warn,warnReason,noindex} = Astro.props;
if (warnReason) warnReason.forEach(item => Stf.add(item))
---
<html lang="en">
  <head>
    {noindex ? <meta name="robots" content="noindex"> : null}
    {warn ? <meta name="rating" content="adult"> : null}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="theme-color" content="#0aa06e"/>
    <meta name="author" content={config.author}>
    <meta name="description" content={Astro.props.is ? `${config.author} is ${Astro.props.is}.` : `Some ramblings about ${Astro.props.title}!`}>
    <title>{title}</title>
  </head>
  <body>
    {warn ?
    <Banner full>
      <h1>Content warning! ðŸ›‘</h1>
      {warnReason ?
      <h2>The following page may contain</h2>
      <ul>
        {warnReason.map((item) => (
          <li>{item}</li>
        ))}
      </ul> : null}
      <p>If you are not an adult, or simply do not wish to see this content, turn back now.</p>
      <hr/>
      <p>As always, it's a good time to remind you that the opinions voiced
      are MY OWN and do not reflect that of my employer.</p>
    </Banner> : null
    }
    <div>
      <div>
        <Header is={is} title={title}/>
        <article>
          <slot name="title">
            <h2>{title}</h2>
          </slot>
          <slot/>
        </article>
        <Footer/>
      </div>
    </div>
  </body>
</html>

<style global>
body {
  font-family: monospace;
  font-size: 18px;
  min-width: 100%;
  margin: 0;
  overflow-y: overlay;
  background: whitesmoke;
}

body > div {
  display: flex;
  justify-content: center;
}

body > div > div {
  padding: 3% 0;
  max-width: 64ch;
}

hr {
  border-style: none;
  border-width: 0;
  width: 100%;
  text-align: center;
}
hr::after {
  content: '---';
}

.lighter {
  color: #0aa06e
}

ul {
  list-style: georgian;
  list-style-position: outside;
}

code {
  background-color: #eee;
  border-radius: 3px;
  font-family: monospace;
  padding: 0 3px;
}

@media screen and (max-width: 800px) {
  article, footer {
    padding: 0 20px;
  }
}

@media (prefers-color-scheme: dark) {
  body {
    background: #282828;
    color: whitesmoke;
  }

  code {
    background-color: darkslategray;
  }

  a {
    color: #9E9EFF;
  }

  a:active {
    color: #FF9E9E
  }

  a:visited {
    color: #D0ADF0
  }
}

/* reuse */
div,ul,h1 {
  margin-block-end: 0;
  margin-block-start: 0;
}
</style>
