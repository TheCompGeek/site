---
import Header from 'component:head'
import Footer from 'component:foot'
const {title,is} = Astro.props;
---
<html>
  <head>
    <meta charset="utf-8">
    <title>{title}</title>
  </head>
  <body>
    <div>
      <Header is={is}/>
      <article>
        <slot name="title">
          <h1>{title}</h1>
        </slot>
        <slot/>
      </article>
      <Footer/>
    </div>
  </body>
</html>

<style global>
body {
  padding: 3% 0;
  font-family: monospace;
  font-size: 18px;
  min-width: 100%;
  display: flex;
  justify-content: center;
  margin: 0;
  overflow-y: overlay;
  background: whitesmoke;
}

body > div {
  max-width: 64ch;
}

.lighter {
  color: rgb(10 160 110)
}

ul {
  list-style: georgian;
  list-style-position: outside;
}

code {
  background-color: #eee;
  border-radius: 3px;
  font-family: monospace;
  padding: 0 3px;
}

@media screen and (max-width: 800px) {
  content {
    padding-left: 20px;
    padding-right: 20px;
  }
}

@media (prefers-color-scheme: dark) {
  body {
    background: #282828;
    color: whitesmoke;
  }

  code {
    background-color: darkslategray;
  }
}
</style>
